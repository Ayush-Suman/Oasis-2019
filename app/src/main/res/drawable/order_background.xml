<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#8655E5"
                    android:endColor="#4CA8F5"
                    android:angle="180"
                    />
        </shape>
    </item>
    <item
            android:bottom="400dp"
            android:left="150dp"
            android:right="-140dp"
            android:top="-90dp">
        <shape android:shape="oval">
            <gradient

                    android:endColor="#698DCBFF"
                    android:centerColor="#1A8F60E9"
                    android:centerX="70%"
                    android:angle="180"
                    />
        </shape>
    </item>
    <item
            android:bottom="-90dp"
            android:left="-140dp"
            android:right="150dp"
            android:top="400dp">
        <shape android:shape="oval">
            <gradient
                    android:startColor="#4D8F60E9"
                    android:centerColor="#1A8DCBFF"
                    android:centerX="30%"
                    android:angle="180" />
        </shape>
    </item>

</layer-list>