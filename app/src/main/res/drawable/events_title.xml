<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F2FF"/>
        </shape>
    </item>
    <item
            android:bottom="0dp"
            android:left="-70dp"
            android:right="-70dp"
            android:top="-120dp">
        <shape android:shape="oval">
            <gradient
                    android:startColor="#320DB8"
                    android:endColor="#6543E0"
                    android:angle="90"
                    android:type="linear"
                    />
        </shape>
    </item>
</layer-list>