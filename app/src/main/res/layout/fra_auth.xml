<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.views.AuthFragment">

    <Button
            android:text="Login as outstee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outsteeLogin" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="227dp"/>
    <Button
            android:text="Login as bitsian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bitsianLogin" android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/outsteeLogin" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>