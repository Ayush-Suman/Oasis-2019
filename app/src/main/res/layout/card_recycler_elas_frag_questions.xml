<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:id="@+id/parent_card_elasFrag_questions"
        android:background="@drawable/shape_rectangle_rounded_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_card_elasFrag_questionNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_card_elasFrag_question"
            android:text="Question 1"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#584BD0"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="Rules"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#584BD0"
            android:id="@+id/text_card_elasFrag_Rules"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_card_elasFrag_question"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_elasFrag_roundType"
            app:layout_constraintLeft_toRightOf="@id/text_card_elasFrag_questionNo"
            app:layout_constraintRight_toLeftOf="@id/text_card_elasFrag_Rules"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_card_elasFrag_question"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#584BD0"
            android:text="Round 1"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/text_card_elasFrag_question"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#242424"
            app:layout_constraintTop_toBottomOf="@id/text_card_elasFrag_questionNo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/lorem_ipsum"
            android:maxLines="3"
            android:padding="8dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>