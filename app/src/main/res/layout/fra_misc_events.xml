<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".events.view.fragments.MiscEventsFragment">

    <View
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:background="@drawable/gra_events_heading"
            android:id="@+id/miscView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Miscellaneous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/miscName" app:layout_constraintTop_toTopOf="@id/miscView"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/dayRecycler" app:layout_constraintStart_toEndOf="@+id/backBtn"
            android:layout_marginStart="32dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/miscEventRecycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/dayRecycler"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/dayRecycler" android:layout_marginTop="72dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back"
            android:id="@+id/backBtn"
            app:layout_constraintBottom_toBottomOf="@+id/miscName" app:layout_constraintTop_toTopOf="@+id/miscName"
            app:layout_constraintStart_toStartOf="@id/miscView" android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>