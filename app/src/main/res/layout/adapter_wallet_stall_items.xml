<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:text="ItemName"
            android:textColor="@android:color/background_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/addBtn"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintEnd_toEndOf="@+id/itemName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Add"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn"
            android:textColor="@color/colorGreen"
            android:background="@drawable/add_button"
            app:layout_constraintTop_toTopOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="+"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:background="@drawable/item_plus_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="@+id/price"/>
    <Button
            android:text="-"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:background="@drawable/item_minus_button"
            app:layout_constraintEnd_toStartOf="@+id/quantity"
            app:layout_constraintTop_toTopOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="@+id/price" android:textAlignment="center"/>
    <TextView
            android:text="0"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            android:textSize="24sp" app:layout_constraintEnd_toStartOf="@+id/plus"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/plus"
            app:layout_constraintBottom_toBottomOf="@+id/plus"
    />
</androidx.constraintlayout.widget.ConstraintLayout>