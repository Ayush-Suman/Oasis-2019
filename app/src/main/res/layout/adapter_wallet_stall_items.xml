<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:text="ItemName"
            android:textColor="@android:color/background_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/addBtn"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:textSize="14sp"
            android:textColor="@color/colorGrey"
            app:layout_constraintStart_toStartOf="@+id/itemName"
            app:layout_constraintEnd_toEndOf="@+id/itemName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Add +"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn"
            android:textColor="@color/colorGreen"
android:background="@drawable/add_button"
            app:layout_constraintTop_toTopOf="@+id/itemName"
            app:layout_constraintBottom_toBottomOf="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="Plus"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:id="@+id/plus" android:textSize="12sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Minus"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:id="@+id/minus" android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/addBtn"
    />
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qunatity"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/minus" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/price" android:textSize="14sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>