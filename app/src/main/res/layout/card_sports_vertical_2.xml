<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="18sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="Round1"
              android:padding="12dp"
              android:id="@+id/textViewRound"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="18sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/textViewRound"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="100 m race"
              android:padding="8dp"
              android:id="@+id/textViewRoundType"
    />

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="18sp"
              app:layout_constraintTop_toBottomOf="@+id/textViewRoundType"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="Winner1"
              android:layout_marginStart="24dp"
              android:layout_marginEnd="24dp"
              android:padding="12dp"
              android:textAlignment="center"
              android:id="@+id/textViewWinner1"
    />




    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="18sp"
              android:textAlignment="center"
              app:layout_constraintTop_toBottomOf="@+id/textViewWinner1"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/textViewWinner3"
              tools:text="Winner 2"
              android:layout_marginStart="24dp"
              android:padding="12dp"
              android:id="@+id/textViewWinner2"
    />
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="18sp"
              app:layout_constraintTop_toBottomOf="@+id/textViewWinner1"
              app:layout_constraintStart_toEndOf="@id/textViewWinner2"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="Winner 3"
              android:textAlignment="center"
              android:layout_marginEnd="16dp"
              android:padding="12dp"
              android:id="@+id/textViewWinner3"
    />

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="14sp"
              app:layout_constraintTop_toBottomOf="@+id/textViewWinner2"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/textViewTime"
              tools:text="19th Sep"
              android:textAlignment="center"
              android:layout_marginStart="24dp"
              android:padding="12dp"
              android:id="@+id/textViewDate"
    />

    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="14sp"
              app:layout_constraintTop_toBottomOf="@+id/textViewWinner2"
              app:layout_constraintStart_toEndOf="@id/textViewDate"
              app:layout_constraintEnd_toStartOf="@id/textViewVenue"
              tools:text="2.30 pm"
              android:textAlignment="center"
              android:padding="12dp"
              android:id="@+id/textViewTime"
    />
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="14sp"
              app:layout_constraintTop_toBottomOf="@+id/textViewWinner3"
              app:layout_constraintStart_toEndOf="@id/textViewTime"
              app:layout_constraintEnd_toEndOf="parent"
              tools:text="SAC"
              android:textAlignment="center"
              android:layout_marginEnd="24dp"
              android:padding="12dp"
              android:id="@+id/textViewVenue"
    />
</androidx.constraintlayout.widget.ConstraintLayout>