<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".events.view.fragments.EventsFragment">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/miscName" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="24sp" android:hint="@android:string/search_go"
            android:textAlignment="center" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/miscEvents"/>

    <Button
            android:text="Misc Events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/miscEvents" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/miscName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="24sp" android:textAlignment="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:id="@+id/recyclerView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/miscEvents" android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>