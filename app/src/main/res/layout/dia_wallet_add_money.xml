<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
android:background="@drawable/shape_rectangle_rounded_24dp">

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Amount"
            android:id="@+id/amount" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Add money"
            android:background="@drawable/profile_back"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/comfortaa"
            android:padding="8dp"
            android:textSize="14sp"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/amount"
            app:layout_constraintEnd_toEndOf="@+id/amount" app:layout_constraintStart_toStartOf="@+id/amount"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>