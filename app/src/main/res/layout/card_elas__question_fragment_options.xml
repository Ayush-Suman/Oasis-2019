<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:id="@+id/parent_card_elasQuestionFrag_options"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toTopOf="@id/horizontalLine"
            android:id="@+id/text_option_number"
            android:text="A."
            android:textColor="#232325"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_width="0dp"
            android:id="@+id/text_option_text"
            app:layout_constraintBottom_toTopOf="@id/horizontalLine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_option_number"
            android:text="This is an option"
            android:textAlignment="center"
            android:textColor="#232325"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintRight_toLeftOf="@+id/img_isOptionSelected"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_width="48dp"
            android:padding="12dp"
            android:id="@+id/img_isOptionSelected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_option_text"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@id/horizontalLine"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_marginStart="16dp"
            android:layout_height="48dp"/>

    <View
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/horizontalLine"
            android:background="#707070"
            android:layout_height="2dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>