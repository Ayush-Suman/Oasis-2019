<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/stallView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/shape_rectangle_rounded_16dp"
        android:backgroundTint="#EAF2FF"
        android:orientation="vertical">


    <ImageView
            android:id="@+id/stallImage"
            android:layout_width="141dp"
            android:layout_height="108dp"
            android:background="@drawable/shape_rectangle_rounded_16dp"
            android:backgroundTint="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.33"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fast_food" />

    <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:text="Stall Name"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"

            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/stallImage"
            app:layout_constraintHorizontal_bias="0.376"
            app:layout_constraintStart_toStartOf="@+id/stallImage"
            app:layout_constraintTop_toTopOf="@+id/stallImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
