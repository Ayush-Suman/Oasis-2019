<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">


    <ImageView
            android:layout_width="175dp"
            android:layout_height="156dp"
            app:srcCompat="@drawable/stalls_card"
            android:id="@+id/stallImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Stall Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            app:layout_constraintEnd_toEndOf="@+id/stallImage"
            app:layout_constraintStart_toStartOf="@+id/stallImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/stallImage"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="(Continental,Lorem Ipsum)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/foodType"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/stallImage"
            app:layout_constraintStart_toStartOf="@+id/stallImage"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/stallImage"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:textColor="@android:color/background_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>
