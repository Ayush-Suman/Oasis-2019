<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_rounded_16dp"
        android:backgroundTint="#31365E"
        android:orientation="vertical"
        android:paddingBottom="16dp">


    <EditText
            android:id="@+id/referralCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="#806F6F6F"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="none"
            android:textIsSelectable="true"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ProgressBar
            android:id="@+id/loadingReferral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#4F32D7"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/shareReferral"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:text="Refer and Earn"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/shareReferral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6C58B9"
            android:background="@drawable/shape_rectangle_rounded_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/referralCode"
            app:layout_constraintStart_toStartOf="@+id/referralCode"
            app:layout_constraintTop_toBottomOf="@+id/referralCode"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shellypalmer_circular_std_book"
                android:padding="8dp"
                android:text="Share Referral Code"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

    </com.balysv.materialripple.MaterialRippleLayout>

</androidx.constraintlayout.widget.ConstraintLayout>