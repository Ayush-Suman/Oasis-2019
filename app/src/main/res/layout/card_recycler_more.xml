<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent">

    <com.balysv.materialripple.MaterialRippleLayout

            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/linear_card_more_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:background="@drawable/shape_rectangle_rounded_8dp"
                android:backgroundTint="#31365E"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/text_card_more_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:fontFamily="@font/shellypalmer_circular_std_book"
                    android:text="More"
                    android:layout_marginStart="16dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:background="#31365E"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_next_arrow"
                    android:id="@+id/imgBttn_card_more_next"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>

