<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="0dp"
                                                       app:layout_constraintBottom_toTopOf="@+id/guideline2"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       android:background="@color/colourPurple"
                                                       android:elevation="20dp" android:id="@+id/constraintLayout">

        <TextView
                android:text="UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/comfortaa"/>
        <TextView
                android:text="User Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userId" app:layout_constraintEnd_toEndOf="@+id/username"
                app:layout_constraintStart_toStartOf="@+id/username" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintHorizontal_bias="1.0"
                android:textSize="14sp" android:textColor="@color/colorWhite"
                android:fontFamily="@font/comfortaa"
        />
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="123dp"
                                                      android:layout_height="114dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:src="@drawable/ic_outline_profile_identity_24px"
                                                      app:layout_constraintHorizontal_bias="0.486"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      app:layout_constraintVertical_bias="0.57"
                                                      android:id="@+id/circleImageView"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_left_arrow"
                android:id="@+id/backBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="176dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/circleImageView" android:textSize="30sp"/>
        <TextView
                android:text="Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance" app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                app:layout_constraintStart_toStartOf="@+id/circleImageView" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/circleImageView" android:textSize="18sp"
                android:fontFamily="@font/comfortaa" android:textStyle="bold" android:textColor="@color/colorWhite"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.34"/>
    <TextView
            android:text="+ Add money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_back"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/comfortaa"
            android:padding="8dp"
            android:textSize="14sp"
            android:elevation="4dp"
            android:id="@+id/AddBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/sendBtn"/>
    <TextView
            android:text="Send money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendBtn"
            android:background="@drawable/profile_back"
            android:textColor="@color/colorWhite"
            android:padding="8dp"
            android:fontFamily="@font/comfortaa"
            android:textSize="14sp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/AddBtn" app:layout_constraintTop_toTopOf="@+id/AddBtn"
            app:layout_constraintStart_toEndOf="@+id/AddBtn"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp" app:srcCompat="@drawable/googleg_standard_color_18"
            android:id="@+id/qrCode"
            app:layout_constraintTop_toBottomOf="@+id/AddBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/qrCode"
            android:id="@+id/ticketsRecycler"/>
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/loading"
                 android:visibility="gone"
                 android:indeterminateTint="@color/colorBlack" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>