<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="118dp"
            android:layout_height="110dp" app:srcCompat="@drawable/ic_outline_profile_identity_24px"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.82"/>
    <TextView
            android:text="Edward Elric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:textSize="30sp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="User id: 1234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userId" app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintStart_toStartOf="@+id/username" app:layout_constraintHorizontal_bias="0.03"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/username"
            android:textSize="18sp"/>
    <TextView
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:id="@+id/logout" app:layout_constraintEnd_toEndOf="@+id/userId"
            app:layout_constraintStart_toStartOf="@+id/userId" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/userId"/>
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:indeterminateTint="@color/colorBlack"
                 android:id="@+id/loading"
                 android:visibility="gone"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                 android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <Button
            android:text="Add Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginEnd="8dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="Send Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/button" android:layout_marginStart="81dp"/>
    <TextView
            android:text="Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balance" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/Tickets" android:layout_marginEnd="143dp"
            app:layout_constraintBottom_toTopOf="@+id/button" android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Tickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Tickets" app:layout_constraintStart_toEndOf="@+id/balance"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/balance" app:layout_constraintTop_toTopOf="@+id/balance"/>
</androidx.constraintlayout.widget.ConstraintLayout>