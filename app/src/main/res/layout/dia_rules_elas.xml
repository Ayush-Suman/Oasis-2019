<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:minWidth="320dp"
        android:background="@drawable/shape_rectangle_rounded_8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/text_rules_heading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Rules"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:textAlignment="center"
            android:padding="8dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/rulesText"
            app:layout_constraintTop_toBottomOf="@id/text_rules_heading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Rules"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:padding="8dp"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/progress_rules_elas"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>