<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".auth.views.Onboarding1Fragment">

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/text_bttn_skip"
            android:textColor="#707070"
            android:textSize="20sp"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@id/linear_onBoarding_fragment"
            android:text="Skip"
            android:fontFamily="@font/shellypalmer_circular_std_book"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_bttn_skip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/linear_onBoarding_fragment"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:src="@drawable/ic_online_order"
            android:id="@+id/img_onBoarding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4AA5FF"
            android:textSize="38sp"
            android:textAlignment="center"
                android:fontFamily="@font/shellypalmer_circular_std_book"
            android:id="@+id/text_onBoarding_heading"
            android:text="Order Food" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#3A3A60"
                android:textAlignment="center"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:textSize="15sp"
                android:id="@+id/text_onBoarding_content"
                android:text="Order food from M-Lawns stalls right from your phone. Just select your order and tap on Buy Now.Order food from M-Lawns stalls right from your phone. Just select your order and tap on Buy Now."
                android:layout_weight="2"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>