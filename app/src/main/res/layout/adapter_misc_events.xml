<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/miscEventsAdapter">
    <TextView
            android:text="Event Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventName" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:textSize="24sp" android:textAlignment="center" android:textColor="@color/colorBlack"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventDesc"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/eventName"
            android:layout_marginStart="24dp" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventOrg"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/eventDesc"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textColor="#6851DA"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventTime"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/eventDesc"
            android:layout_marginTop="16dp" android:textColor="#6851DA"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventVenue"
            app:layout_constraintEnd_toStartOf="@+id/eventTime"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/eventDesc"
            android:layout_marginTop="16dp" android:textColor="#6851DA"/>
    <Button
            android:text="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/markFav" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"
            android:textColor="#6851DA"/>
</androidx.constraintlayout.widget.ConstraintLayout>